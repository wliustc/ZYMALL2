<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a6d"
    android:layout_width="fill_parent"
    android:layout_height="32.0dip"
    android:background="@drawable/search_title_background"
    android:gravity="center_vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:src="@drawable/prouct_list_search_icon" />

    <AutoCompleteTextView
        android:id="@+id/search_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/search_icon"
        android:background="@color/transparent"
        android:completionThreshold="1"
        android:dropDownWidth="fill_parent"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center_vertical"
        android:hint="@string/a1u"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingRight="32.0dip"
        android:singleLine="true"
        android:textColor="@color/yl"
        android:textColorHint="@color/yk"
        android:textSize="15.0sp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/aox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="6.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/search_text_cancel"
        android:visibility="gone" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/search_voice"
        android:layout_width="32.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="6.0dip"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="6.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/app_icon_voice"
        android:visibility="visible" />
</RelativeLayout>