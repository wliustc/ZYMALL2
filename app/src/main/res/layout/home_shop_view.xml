<?xml version="1.0" encoding="utf-8"?><!-- od.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="133.0dip">

    <LinearLayout
        android:id="@+id/home_shop_left_corner"
        android:layout_width="27.0dip"
        android:layout_height="133.0dip"
        android:background="@drawable/home_shop_left_corner_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_shop_title"
            android:layout_width="17.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="27.0dip"
            android:ems="1"
            android:gravity="center"
            android:text="@string/home_good_shop_title"
            android:textColor="#ffffffff"
            android:textSize="14.0dip" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@drawable/home_shop_arrow" />
    </LinearLayout>

    <com.zy.app.mall.home.floor.view.view.MallFloor_ShopRecyclerView
        android:id="@+id/home_shop_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="133.0dip"
        android:layout_toRightOf="@id/home_shop_left_corner" />
</RelativeLayout>