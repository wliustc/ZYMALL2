<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="254.0dip"
    android:layout_height="133.0dip"
    android:layout_marginRight="5.0dip"
    android:background="@drawable/home_shop_recycler_item_bg">

    <LinearLayout
        android:id="@+id/home_shop_recycler_left_corner"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_shop_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33.0dip"
            android:gravity="center_horizontal"
            android:lines="2"
            android:maxEms="2"
            android:textColor="#ff874af8"
            android:textSize="15.0dip" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dip">

            <TextView
                android:id="@+id/home_shop_category_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ff666666"
                android:textSize="12.0dip" />

            <TextView
                android:id="@+id/home_shop_recycler_txt2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_shop_category_count"
                android:gravity="center"
                android:text="好店"
                android:textColor="#ff666666"
                android:textSize="12.0dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/home_shop_recycler_left_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_shop_shop_image"
            android:layout_width="87.0dip"
            android:layout_height="29.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7.0dip" />

        <TextView
            android:id="@+id/home_shop_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_shop_shop_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4.0dip"
            android:singleLine="true"
            android:textColor="#ff181818"
            android:textSize="14.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="66.0dip"
        android:layout_alignBottom="@id/home_shop_recycler_left_corner"
        android:layout_marginBottom="6.0dip"
        android:layout_marginTop="9.0dip"
        android:layout_toRightOf="@id/home_shop_recycler_left_corner"
        android:gravity="center">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_shop_product_image1"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_shop_product_image2"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:layout_marginLeft="3.0dip" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_shop_product_image3"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:layout_marginLeft="3.0dip" />
    </LinearLayout>
</RelativeLayout>