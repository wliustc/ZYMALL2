<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:paddingLeft="9.0dip"
    android:paddingRight="9.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip">

        <LinearLayout
            android:id="@+id/category_item_no_picture_ll_1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a29"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="2"
                android:textColor="@color/category_new_level3_font"
                android:textSize="@dimen/fl" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/a2_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_item_no_picture_ll_2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a2b"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="2"
                android:textColor="@color/category_new_level3_font"
                android:textSize="@dimen/fl" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/a2c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_item_no_picture_ll_3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a2e"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="5"
                android:maxLines="2"
                android:textColor="@color/category_new_level3_font"
                android:textSize="@dimen/fl" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/a2f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>