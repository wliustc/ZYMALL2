        android:text="查看更多"
        android:textColor="#ff686868"
        android:textSize="12.0dip" />

    <TextView
        android:id="@+id/home_shop_more_blank"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/home_shop_more_txt"
        android:textSize="1.0dip" />
</RelativeLayout>