<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/hi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@id/a1r"
            layout="@layout/app_head_search_category" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@id/od"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@id/a1s"
                android:layout_width="85.0dip"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@color/b4"
                android:dividerHeight="1.0px"
                android:scrollbars="none" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout
                    android:id="@id/a1t"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@id/a1u"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/b3i"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@id/a1v"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/a5"
                    android:visibility="gone">

                    <include
                        layout="@layout/jd_common_state_page_01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <com.jingdong.common.ui.JDProgressBar
            android:id="@id/a1w"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_centerInParent="true"
            android:max="100"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@id/a1x"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:visibility="gone">

            <include
                layout="@layout/jd_common_state_page_01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>